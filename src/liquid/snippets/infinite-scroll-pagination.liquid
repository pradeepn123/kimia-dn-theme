<pagination-component data-target='{{ target }}' data-container-id='{{ container_id }}'>
  {% assign page_count = 1 %}
  {% assign total_page = 2 %}
  {%- if paginate.next.url and  page_count != total_page -%}
    {% assign page_count = page_count | plus: 1 %}
    <pagination-infinite-scroll class='pagination-infinite-scroll' data-url='{{ paginate.next.url }}'>
      {%- render 'icon', icon_name: 'spinner', class: 'loading-spinner hidden pagination-infinite-scroll__loading-spinner' -%}
    </pagination-infinite-scroll>
  {%- endif -%}
</pagination-component>
 
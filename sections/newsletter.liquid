{%- liquid
  assign options = section.settings

  assign desktop_img = options.desktop_img
  assign mobile_img = options.mobile_img

  assign video = options.video

  assign enable_background_around_container = options.enable_background_around_container

  assign newsletter_button = options.newsletter_button
  assign color_scheme = options.color_scheme
  assign mobile_height = options.mobile_height
  assign desktop_height = options.desktop_height
  assign section_spacing_top = options.section_spacing_top
  assign section_spacing_bottom = options.section_spacing_bottom
  assign container_size = options.container_size

  assign mobile_content_position = options.mobile_content_position
  assign desktop_content_position = options.desktop_content_position

  assign desktop_content_align = options.desktop_content_align
  assign mobile_content_align = options.mobile_content_align

  assign mobile_content_background = options.mobile_content_background
  assign desktop_content_background = options.desktop_content_background

  assign mobile_overlay_opacity = options.mobile_overlay_opacity | times: 0.01
  assign desktop_overlay_opacity = options.desktop_overlay_opacity | times: 0.01

  assign content_max_width = options.content_max_width | divided_by: 10
  assign content_spacing = options.content_spacing | divided_by: 10
-%}
{{ 'newsletter.css' | asset_url | stylesheet_tag }}
{% capture css %}
  {% style %}
    .section-{{section.id}}{
        --gsc-height: {{mobile_height}}px;
        --gsc-overlay-opacity: {{mobile_overlay_opacity}};
        --gsc-content-width: {{ content_max_width }}rem;
        --gsc-content-spacing: {{ content_spacing }}rem;
        --gsc-content-align: {{ mobile_content_align }};
        --gsc-section-spacing-top: {{ section_spacing_top }}px;
        --gsc-section-spacing-bottom: {{ section_spacing_bottom }}px;
    }
    
    .section-{{ section.id }} .newsletter__content-wrap {
        {{ mobile_content_position }}
    }

    @media {% render 'media-queries', screen: 'md' %} {
        .section-{{ section.id }} .newsletter__content-wrap {
            {{ desktop_content_position }}
        }

        .section-{{ section.id }}{
            --gsc-height: {{ desktop_height }}px;
            --gsc-content-align: {{ desktop_content_align }};
            --gsc-overlay-opacity: {{ desktop_overlay_opacity }};
        }
    }    
  {% endstyle %}
{% endcapture %}

{% render 'inline-css-minifier', css: css %}

<div class="section-{{ section.id }} {% if enable_background_around_container %} section color-{{ color_scheme }} {% endif %}">
  <div class="section-spacing container container--{{ container_size }} newsletter__outer-container {% if container_size == 'full-screen' %} newsletter__outer-container--full-screen{% endif %}">
    <div class="newsletter {% unless enable_background_around_container %} section color-{{ color_scheme }} {% endunless %}">
      <div
        class="newsletter__content-wrap {% if desktop_content_background != 'none' %} newsletter__content--with-{{ desktop_content_background }}-background{% endif %}"
        data-aos="fade-up"
      >
        {%- if section.blocks.size > 0 -%}
          <div class="newsletter__content newsletter__content--desktop">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'title' -%}
                  <div class="newsletter__left-content">
                    {%- if block.settings.tease != blank -%}
                      <h4
                        class="block-{{block.id}} newsletter__teaser newsletter__mobile-inline"
                        {{ block.shopify_attributes }}
                        style="color: {{block.settings.color}}"
                      >
                        {{ block.settings.tease }}
                      </h4>
                    {% endif %}
                    {%- if block.settings.title != blank -%}
                      <h2
                        class="block-{{block.id}} newsletter__title newsletter__mobile-inline"
                        {{ block.shopify_attributes }}
                        style="color: {{block.settings.color}}"
                      >
                        {{ block.settings.title }}
                      </h2>
                    {%- endif -%}
                {%- when 'text' -%}
                  {%- if block.settings.text != blank -%}
                    <div
                      class="rte {{ block.settings.body_size }} newsletter__text block-{{block.id}} body-font-weight-from-global-settings newsletter__mobile-inline newsletter__hide-desktop"
                      {{ block.shopify_attributes }}
                      style="color: {{block.settings.color}}"
                    >
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}
                  </div>
                  <div class="newsletter__right-content">
                {%- when 'caption' -%}
                  {%- if block.settings.caption != blank -%}
                    <div
                      class="caption newsletter__caption block-{{block.id}} newsletter__mobile-inline"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.caption }}
                    </div>
                  {%- endif -%}
                {%- when 'text' -%}
                  {%- if block.settings.text != blank -%}
                    <div
                      class="rte {{ block.settings.body_size }} newsletter__text block-{{block.id}} body-font-weight-from-global-settings newsletter__hide-mobile"
                      {{ block.shopify_attributes }}
                      style="color: {{block.settings.color}}"
                    >
                      {{ block.settings.text }}
                    </div>
                  {%- endif -%}
                {%- when 'subscribe' -%}
                  {%- form 'customer',
                    id: 'DesktopNewsletterSectionForm',
                    class: 'newsletter__form block-{{block.id}}'
                  -%}
                    <input
                      name="contact[tags]"
                      type="hidden"
                      value="newsletter"
                      id="DesktopNewsletterSectionForm-ContactTagsInput-{{ form.id }}"
                    >
                    <div
                      class="field newsletter__field"
                      {% if section.settings.newsletter_button == 'image' %}
                        style="flex-wrap: nowrap;"
                      {% endif %}
                    >
                      <label class="visually-hidden" for="DesktopNewsletterSectionForm-ContactEmailInput-{{ form.id }}">
                        {{- 'forms.newsletter.email_input_label' | t -}}
                      </label>
                      <input
                        type="email"
                        name="contact[email]"
                        class="input input--large input--{{ block.settings.input_style }} newsletter__input email-bar"
                        value="{{ form.email }}"
                        aria-required="true"
                        autocorrect="off"
                        autocapitalize="off"
                        autocomplete="email"
                        placeholder="{{ 'forms.newsletter.email_input_placeholder' | t }}"
                        required
                        id="DesktopNewsletterSectionForm-ContactEmailInput-{{ form.id }}"
                      >
                      <button
                        class="btn btn--solid btn--lg newsletter__input-btn news--button"
                        name="commit"
                        aria-label="{{ 'forms.newsletter.subscribe_button_label' | t }}"
                        {% if section.settings.newsletter_button == 'image' %}
                          style="padding:0 !important; border:0; outline:0"
                        {% endif %}
                      >
                        {%- if section.settings.newsletter_button == 'text' -%}
                          {{ section.settings.newsletter_text }}
                        {%- elsif section.settings.newsletter_button == 'image' -%}
                          {% if section.settings.newsletter_image != blank %}
                            <img
                              class="news_image"
                              src="{{ section.settings.newsletter_image  | image_url }}"
                              alt="button icon"
                            >
                          {% endif %}
                        {%- elsif section.settings.newsletter_button == 'html' -%}
                          {% if section.settings.newsletter_svg == blank %}
                            {% render 'icon-pack', icon: 'blog-chevron', class: '' %}
                          {% else %}
                            {{ section.settings.newsletter_svg }}
                          {% endif %}
                        {% endif %}
                      </button>
                    </div>
                    {%- if form.errors -%}
                      {%- assign error_message = form.errors.translated_fields.email
                        | capitalize
                        | append: ' '
                        | append: form.errors.messages.email
                      -%}
                      <script>
                        window.addEventListener('load', () => {
                          window.bodyElement.notification.show('{{ error_message }}', 'warning');
                        });
                      </script>
                    {%- endif -%}
                    {%- if form.posted_successfully? -%}
                      <script>
                        window.onload = function () {
                          document.querySelector('.newsletter__right-content').style.display = 'none';
                          document.querySelector('.newsletter__field__confirmation').style.display = 'block';
                        };
                      </script>
                    {%- endif -%} 
                  {%- endform -%}

                  </div>
                  <div class="newsletter__field__confirmation">
                    <h3>Thank You</h3>
                    <p>{{ section.settings.newsletter_confirmation_message }}</p>
                  </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>
          {% comment %}
            <div class='newsletter__content newsletter__content--mobile {% if mobile_content_background != 'none' %} newsletter__content--with-{{ mobile_content_background }}-background{% endif %}'>
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'caption' -%}
                    {%- if block.settings.caption != blank -%}
                      <div class='caption newsletter__caption block-{{block.id}}' {{ block.shopify_attributes }}>
                        {{ block.settings.caption }}
                      </div>
                    {%- endif -%}
                  {%- when 'title' -%}
                    {%- if block.settings.title != blank -%}
                      <h2 class='block-{{block.id}} {{ block.settings.heading_size }}' {{ block.shopify_attributes }} style="color: {{block.settings.color}}">
                        {{ block.settings.title }}
                      </h2>
                    {%- endif -%}
                  {%- when 'text' -%}
                    {%- if block.settings.text != blank -%}
                      <div
                        class='rte {{ block.settings.body_size }} newsletter__text block-{{block.id}} body-font-weight-from-global-settings'
                        {{ block.shopify_attributes }} style="color: {{block.settings.color}}"
                      >
                        {{ block.settings.text }}
                      </div>
                    {%- endif -%}
                  {%- when 'subscribe' -%}
                    {%- form 'customer', id: 'MobileNewsletterSectionForm', class: 'newsletter__form block-{{block.id}}' -%}
                      <input
                        name='contact[tags]'
                        type='hidden'
                        value='newsletter'
                        id='MobileNewsletterSectionForm-ContactTagsInput-{{ form.id }}'
                      >
                      <div class='field newsletter__field'  {% if section.settings.newsletter_button == 'text' %} style="flex-wrap:wrap" {% endif %} {% if section.settings.newsletter_button == 'image' %} style="flex-wrap: nowrap;" {% endif %}>
                        <label class='visually-hidden' for='MobileNewsletterSectionForm-ContactEmailInput-{{ form.id }}'>
                          {{- 'forms.newsletter.email_input_label' | t -}}
                        </label>
                        <input
                          type='email'
                          name='contact[email]'
                          class='input input--large input--{{ block.settings.input_style }} newsletter__input email-bar'
                          value='{{ form.email }}'
                          aria-required='true'
                          autocorrect='off'
                          autocapitalize='off'
                          autocomplete='email'
                          placeholder='{{ 'forms.newsletter.email_input_placeholder' | t }}'
                          required
                          id='MobileNewsletterSectionForm-ContactEmailInput-{{ form.id }}'
                        >
                        <button
                          class='btn btn--solid btn--lg newsletter__input-btn'
                          name='commit'
                          aria-label='{{ 'forms.newsletter.subscribe_button_label' | t }}'
                          {% if section.settings.newsletter_button == 'image' %} style="padding:0 !important; border:0; outline:0" {% endif %}
                        >

                          <!-- {{ 'forms.newsletter.subscribe_button_label' | t }} -->
                          {%- if section.settings.newsletter_button == "text" -%}
                            {{ section.settings.newsletter_text }}
                          {%- elsif section.settings.newsletter_button == "image" -%}
                         <img class="news_image" src="{{ section.settings.newsletter_image  | image_url }}" alt="button icon" />
                         {%- endif -%}
                        </button>
                      </div>
                      {%- if form.errors -%}
                        {%- assign error_message = form.errors.translated_fields.email
                          | capitalize
                          | append: ' '
                          | append: form.errors.messages.email
                        -%}
                        <script>
                          window.addEventListener('load', () => {
                            window.bodyElement.notification.show('{{ error_message }}', 'warning')
                          })
                        </script>
                      {%- endif -%}
                      {%- if form.posted_successfully? -%}
                        {%- assign success_message = 'forms.newsletter.success' | t -%}
                        <script>
                          window.addEventListener('load', () => {
                            window.bodyElement.notification.show('{{ success_message }}', 'success')
                          })
                        </script>
                      {%- endif -%}
                    {%- endform -%}
                {%- endcase -%}
              {%- endfor -%}
            </div>
          {% endcomment %}
        {%- endif -%}

        {%- render 'media-with-art-direction',
          with_overlay: true,
          with_placeholder: false,
          class: 'newsletter__media',
          desktop_img: desktop_img,
          mobile_img: mobile_img,
          mobile_video: video,
          desktop_video: video
        -%}
      </div>
    </div>
  </div>
</div>


                        {%- endif -%}
                        {%- if title != blank -%}
                            <span class='h2'>{{ title }}</span>
                        {%- endif -%}
                        {%- if text != blank -%}
                            <div class='{{ body_size }} ingredient-desc'>
                            {{ text }}
                            </div>
                        {%- endif -%}

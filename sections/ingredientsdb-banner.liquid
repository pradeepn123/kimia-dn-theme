                        mobile_video: video,
                        desktop_video: video
                    -%}
                </div>
            {% elsif section.settings.desktop_img != blank %}
            <div class="ingredientdb__hero_image">
                <img src="{{ desktop_img | img_url:'master' }}">
            </div>
            {% endif %}
         
            {%- if caption != blank or title != blank or text != blank or btn_text != blank or extra_btn_text != blank -%}

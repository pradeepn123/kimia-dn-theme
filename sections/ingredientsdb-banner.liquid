                                {% if block.settings.svg_image_icon != blank%}
                                    <div class="icon-wrap">
                                        {{block.settings.svg_image_icon}}
                                    </div>
                                {% elsif block.settings.image_icon != blank %}
                                    <div class="icon-wrap">
                                        <img src="{{ block.settings.image_icon | img_url:'master' }}">
                                    </div>
                                {% endif %}

{%- liquid
  assign options = section.settings
  assign color_scheme = options.color_scheme
  assign img_ratio = options.img_ratio
  assign results_per_category = options.results_per_category
  assign recommendations_title = options.recommendations_title
  assign recommendations_queries = options.recommendations_queries | newline_to_br | split: '<br />'

  assign tabs_count = 0

  if predictive_search.resources.products.size > 0
    assign tabs_count = tabs_count | plus: 1
    assign has_products = true
  endif

  if predictive_search.resources.pages.size > 0
    assign tabs_count = tabs_count | plus: 1
    assign has_pages = true
  endif

  if predictive_search.resources.articles.size > 0
    assign tabs_count = tabs_count | plus: 1
    assign has_blog_posts = true
  endif

  if predictive_search.resources.collections.size > 0
    assign tabs_count = tabs_count | plus: 1
    assign has_collections = true
  endif

  if predictive_search.resources.queries.size > 0
    assign tabs_count = tabs_count | plus: 1
    assign has_queries = true

    if predictive_search.resources.queries.size == 1
      if predictive_search.resources.queries[0].text == predictive_search.terms
        assign tabs_count = tabs_count | minus: 1
        assign has_queries = false
      endif
    endif
  endif
-%}

{%- if settings.search_type == 'modal_and_page' -%}
  {%- unless template.name contains 'search' -%}
    <search-sidebar
      class='search-sidebar color-{{ color_scheme }}'
      id='SearchSidebar'
      data-overlay-opacity="0.2"
      data-with-close-on-escape
      data-sidebar-section
      data-section-id='{{ section.id }}'
      tabindex='-1'
    >
      <template>
        <div class='search-sidebar__body'>
          <div class='search-sidebar__header-wrapper'>
            <div class='search-sidebar__header'>
              <div class='search-sidebar__header-title'>
              </div>
              <sidebar-button>
                <button
                  data-sidebar-button
                  data-sidebar-id='SearchSidebar'
                  class='unstyled-button search-sidebar__close-button-wrapper close-button-with-scale-hover-wrapper'
                  tabindex='0'
                >
                  <span class='search-sidebar__close-button-with-scale-hover close-button-with-scale-hover'></span>
                </button>
              </sidebar-button>
            </div>
            {% render 'search-form', form_id: "SearchSidebarForm" %}
          </div>

          <div class='search-sidebar__content' data-sidebar-search-content>
            <div data-sidebar-search-content-results>
              {% if predictive_search.performed and tabs_count > 0 %}
                {%- if has_queries -%}
                  <div class='search-sidebar-section '>
                    <h6
                      class='search-sidebar-section__header search-sidebar-section__header--queries'
                    >
                      <div class='search-sidebar-section__header-title'>
                        {{- 'sections.predictive_search.queries_tab' | t -}}
                      </div>
                    </h6>
                    <div class='search-sidebar-section__card-grid--queries'>
                      {%- for query in predictive_search.resources.queries limit: results_per_category -%}
                        {% if query.text != predictive_search.terms %}
                          <button
                            class='unstyled-button search-sidebar-section__query'
                            data-sidebar-search-item
                            data-sidebar-search-query='{{ query.text }}'
                            tabindex='0'
                          >
                            {{ query.styled_text }}
                          </button>
                        {% endif %}
                      {%- endfor -%}
                    </div>
                  </div>
                {%- endif -%}
              {% else %}
                <div class='search-sidebar-section '>
                  <h6
                    class='search-sidebar-section__header search-sidebar-section__header--queries'
                  >
                    <div class='search-sidebar-section__header-title'>
                      {{ recommendations_title }}
                    </div>
                  </h6>
                  <div class='search-sidebar-section__card-grid--queries'>
                    {%- for query in recommendations_queries limit: results_per_category -%}
                      <button
                        class='unstyled-button search-sidebar-section__query'
                        data-sidebar-search-query='{{ query }}'
                      >
                        {{ query }}
                      </button>
                    {%- endfor -%}
                  </div>
                </div>
              {% endif %}

              {%- if has_products -%}
                <div class='search-sidebar-section'>
                  <h6
                    class='search-sidebar-section__header'
                  >
                    <div class='search-sidebar-section__header-title'>
                      {{- 'sections.predictive_search.products_tab' | t -}}
                    </div>
                  </h6>
                  <div class='card-grid search-sidebar-section__card-grid'>
                    {%- for product in predictive_search.resources.products limit: results_per_category -%}
                      <div class='card-grid__item' data-sidebar-search-item>
                        {% render 'product-card',
                          product: product,
                          show_color_swatches_on_hover: settings.show_product_color_swatches_on_hover,
                          with_bottom_spacing: true,
                          is_search_sidebar_result: true,
                          img_ratio: img_ratio
                        %}
                      </div>
                    {%- endfor -%}
                  </div>
                </div>
              {%- endif -%}
              {%- if has_blog_posts -%}
                <div class='search-sidebar-section'>
                  <h6
                    class='search-sidebar-section__header'
                  >
                    <div class='search-sidebar-section__header-title'>
                      {{- 'sections.predictive_search.blog_posts_tab' | t -}}
                    </div>
                  </h6>
                  <div class='card-grid search-sidebar-section__card-grid'>
                    {%- for article in predictive_search.resources.articles limit: results_per_category -%}
                      <div class='card-grid__item' data-sidebar-search-item>
                        {% render 'article-card', with_bottom_spacing: true, article: article, img_ratio: 'landscape' %}
                      </div>
                    {%- endfor -%}
                  </div>
                </div>
              {%- endif -%}
              {%- if has_collections -%}
                <div class='search-sidebar-section'>
                  <h6 class='search-sidebar-section__header'>
                    <div class='search-sidebar-section__header-title'>
                      {{- 'sections.predictive_search.collections_tab' | t -}}
                    </div>
                  </h6>
                  <div class='card-grid search-sidebar-section__card-grid'>
                    {%- for collection in predictive_search.resources.collections limit: results_per_category -%}
                      <div class='card-grid__item' data-sidebar-search-item>
                        {% render 'collection-card',
                          with_bottom_spacing: true,
                          title: collection.title,
                          img: collection.image,
                          img_ratio: img_ratio,
                          collection: collection,
                          text_style: 'under-image',
                          show_product_count: true,
                          link_url: collection.url
                        %}
                      </div>
                    {%- endfor -%}
                  </div>
                </div>
              {%- endif -%}
              {%- if has_pages -%}
                <div class='search-sidebar-section'>
                  <h6
                    class='search-sidebar-section__header'
                  >
                    <div class='search-sidebar-section__header-title'>
                      {{- 'sections.predictive_search.pages_tab' | t -}}
                    </div>
                  </h6>
                  <div class='card-grid search-sidebar-section__card-grid'>
                    {%- for page in predictive_search.resources.pages limit: results_per_category -%}
                      <div class='card-grid__item' data-sidebar-search-item>
                        {% render 'page-card', page: page, img_ratio: img_ratio, with_small_icon: true %}
                      </div>
                    {%- endfor -%}
                  </div>
                </div>
              {%- endif -%}
            </div>
          </div>

          <div class='search-sidebar__footer hidden' data-sidebar-search-footer>
            <button
              class='btn btn--solid btn--lg search-sidebar__footer-button'
              aria-label='{{ 'sections.predictive_search.button_label' | t }}'
              form='SearchSidebarForm'
              type='submit'
            >
              {{ 'sections.predictive_search.button_label' | t }}
            </button>
          </div>
        </div>
      </template>
    </search-sidebar>
  {%- endunless -%}
{%- endif -%}

{% schema %}
{
  "name": "t:sections.search_drawer.name",
  "tag": "aside",
  "class": "section-search--sidebar",
  "settings": [
    {
      "type": "paragraph",
      "content": "Make the drawer section active or inactive in Theme settings > Navigation"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "default",
          "label": "t:sections.general_section_settings.color_scheme_option_default_label"
        },
        {
          "value": "primary",
          "label": "t:sections.general_section_settings.color_scheme_option_primary_label"
        },
        {
          "value": "secondary",
          "label": "t:sections.general_section_settings.color_scheme_option_secondary_label"
        },
        {
          "value": "custom-1",
          "label": "t:sections.general_section_settings.color_scheme_option_custom_1_label"
        },
        {
          "value": "custom-2",
          "label": "t:sections.general_section_settings.color_scheme_option_custom_2_label"
        },
        {
          "value": "custom-3",
          "label": "t:sections.general_section_settings.color_scheme_option_custom_3_label"
        }
      ],
      "default": "default",
      "label": "t:sections.general_section_settings.color_scheme_label",
      "info": "t:sections.general_section_settings.color_scheme_tip"
    },
    {
      "type": "select",
      "id": "img_ratio",
      "options": [
        {
          "value": "default",
          "label": "t:sections.general_section_settings.img_ratio_option_default_label"
        },
        {
          "value": "square",
          "label": "t:sections.general_section_settings.img_ratio_option_square_label"
        },
        {
          "value": "portrait",
          "label": "t:sections.general_section_settings.img_ratio_option_portrait_label"
        },
        {
          "value": "portrait-xl",
          "label": "t:sections.general_section_settings.img_ratio_option_portrait_xl_label"
        },
        {
          "value": "landscape",
          "label": "t:sections.general_section_settings.img_ratio_option_landscape_label"
        }
      ],
      "default": "default",
      "label": "t:sections.general_section_settings.img_ratio_label"
    },
    {
      "type": "range",
      "id": "results_per_category",
      "min": 2,
      "max": 10,
      "step": 2,
      "default": 10,
      "label": "t:sections.search_drawer.results_per_category.label",
      "info": "t:sections.search_drawer.results_per_category.info"
    },
    {
      "type": "header",
      "content": "Recommendations"
    },
    {
      "type": "text",
      "id": "recommendations_title",
      "default": "Most searched",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "recommendations_queries",
      "default": "party dress\nblue denim\nhandbag\nshirt",
      "label": "Recommended queries",
      "info": "Place each query in a separate line"
    }
  ]
}
{% endschema %}
